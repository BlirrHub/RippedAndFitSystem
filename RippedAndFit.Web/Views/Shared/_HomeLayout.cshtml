<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ripped And Fit</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/header.css"/>
    <link rel="stylesheet" href="~/css/home.css"/>
</head>
<body>
    <div class="wrap">
        <header>
            <div class="header-left">
                <a asp-controller="Home" asp-action="Home">
                    <img class="gym-logo" src="@Url.Content("~/image/Logo.svg")" alt="Ripped and Fit Logo" />
                </a>
            </div>

            <nav>
                <div>
                    <a href="#" class="menu-open hide-desktop">
                        <img src="@Url.Content("~/image/Menu-Icon.svg")" alt="Open Menu" />
                    </a>
                </div>
                <ul>
                    <li class="hide-desktop">
                        <a href="#" class="menu-close">
                            <img src="@Url.Content("~/image/Close-Icon.svg")" alt="Close Menu" />
                        </a>
                    </li>
                    <li><a asp-controller="Home" asp-action="Home">Home</a></li>
                    <li><a asp-controller="Home" asp-action="About">About</a></li>
                    <li><a asp-controller="Home" asp-action="Contact">Contact</a> </li>
                    <li><a asp-controller="Home" asp-action="Login" class="header-login-btn">Login</a></li>
                </ul>
            </nav>
        </header> 
    </div>
    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>
    
    <script>
        const menu = document.querySelector('nav ul');
        const menuBtn = document.querySelector('.menu-open');
        const closeBtn = document.querySelector('.menu-close');

        if (menuBtn) {
            menuBtn.addEventListener('click', () => {
                menu.classList.add('open');
            });
        }

        if (closeBtn) {
            closeBtn.addEventListener('click', () => {
                menu.classList.remove('open');
            });
        }
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 
