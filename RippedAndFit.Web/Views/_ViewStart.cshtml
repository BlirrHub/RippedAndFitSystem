@using RippedAndFit.Domain.Enums
@using System.Security.Claims

@{
    var userRole = User.FindFirst(ClaimTypes.Role)?.Value;

    Layout = userRole switch
    {
        var role when role == Roles.Admin.ToString() => "_AdminLayout",
        var role when role == Roles.FrontDesk.ToString() || role == Roles.Trainer.ToString() => "_AdministrationLayout",
        var role when role == Roles.Member.ToString() => "_MemberLayout",
        _ => "_HomeLayout" // Default layout
    };
}
