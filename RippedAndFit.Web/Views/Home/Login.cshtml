@model RippedAndFit.Domain.Entities.Users;

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
    var storedUsername = Context.Request.Cookies["Username"];
    var rememberMeChecked = Context.Request.Cookies["RememberMe"] == "true" ? "checked" : "";
}

<div class="home-background">

    <div class="slogan">
        <h1>
            SHAPE YOUR <b style="color: #ed563b">BODY</b> <span class="login-sub-head" style="color:white">EASY WITH <b style="color: #ed563b">OUR GYM</b></span>
        </h1>
        <img src="~/image/Push-Up.svg" alt="Guy doing a Push-Up"/>
    </div>

    <div class="login-form">
        <form method="post">
            <div>
                <h1>LOG IN<span style="color: white">Let's track your goals</span></h1>
            </div>
            <div>
                <input asp-for="Username" placeholder="Username" class="username-field" value="@storedUsername" />
                <span asp-validation-for="Username"></span>
                <input asp-for="Password" placeholder="Password" class="password-field" name="Password" type="password" />
                <span asp-validation-for="Password"></span>
                <div class="utility">
                    <div class="remember-me">
                        <input type="checkbox" name="RememberMe" value="true" @rememberMeChecked />
                        <p>Remember Me?</p>
                    </div>
                    <a asp-controller="Home" asp-action="ForgotPassword" >Forgot Password?</a>
                </div>
                
            </div>
            <div>
                <button type="submit">LOGIN</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}